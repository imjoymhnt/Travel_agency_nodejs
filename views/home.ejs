<%- include('partials/header') -%>
<div class="hero-heading">
  <h1>
    Create Your Own Way With <strong class="diff">Sumitra Travels.</strong>
  </h1>
  <a href="#content" class="btn btn-secondary btn-lg">Let's Go</a>
</div>
<section id="content">
  <div class="contents pt-3">
    <div class="container">
      <div class="row">
        <%cars.forEach((car) => {%>
        <div
          class="col-xs-12 col-sm-6 col-md-4 col-lg-4 d-flex justify-content-center mt-3 mb-3"
        >
          <div class="card" style="width: 18rem">
            <img
              src="./uploads/images/<%= car.img %>"
              class="card-img-top"
              alt="<%= car.name %>"
              style="height: 260px; width: 286px"
            />
            <div class="card-body">
              <h3 class="card-title"><%=car.name%></h3>
              <h4 class="card-title">Color: <%=car.color%></h4>

              <p class="card-text">Contact Person: <%=car.owner%></p>
              <p>Contact Number: <span><%=car.phNumber%></span></p>
            </div>
          </div>
        </div>
        <%})%>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') -%>
