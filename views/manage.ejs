<%- include('partials/admin-header')-%>
<br />
<div>
  <h1 class="text-center"><strong><%=title%></strong></h1>
  <hr />
</div>
<div class="container">
  <a class="btn btn-primary" href="/add">Add Cars</a>
</div>
<br />
<div class="container">
  <div class="jumbotron">
    <div class="row">
      <%cars.forEach((car) => {%>
      <div
        class="col-xs-12 col-sm-6 col-md-4 col-lg-4 d-flex justify-content-center mt-3"
      >
        <div class="card" style="width: 18rem">
          <img
            src="/uploads/images/<%= car.img %>"
            class="card-img-top"
            alt="<%= car.name %>"
            style="height: 260px; width: 286px"
          />
          <div class="card-body">
            <h3 class="card-title"><%=car.name%></h3>
            <h4 class="card-title">Color: <%=car.color%></h4>

            <p class="card-text">Contact Person: <%=car.owner%></p>
            <p>Contact Number: <span><%=car.phNumber%></span></p>
          </div>
          <div class="d-flex flex-row justify-content-center">
            <form action="/manage/delete/confirm" method="POST" class="m-2">
              <input type="hidden" name="id" value="<%=car._id%>" />
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <a class="btn btn-dark m-2" href="/manage/edit/<%=car._id%>"
              >Edit</a
            >
          </div>
        </div>
      </div>
      <%})%>
    </div>
  </div>
</div>
<%- include('partials/admin-footer')-%>
